{
  "version": "1.0.0-*",
  "buildOptions": {
    "emitEntryPoint": true,
    "outputName": "Encrypt"
  },

  "dependencies": {
    "Microsoft.NETCore.App": {
      "type": "platform",
      "version": "1.0.1"
    }
  },

  "frameworks": {
    "netcoreapp1.0": {
      "imports": "dnxcore50"
    }
  },

  "publishOptions": {
    "include": [ "*.dll" ],
    "exclude": [ "**/*.pdb" ]
  },

  "scripts": {
    "postcompile": [
      "dotnet publish --no-build -f \"netcoreapp1.0\" -c release -o \"lib\""
    ]
  }
}
